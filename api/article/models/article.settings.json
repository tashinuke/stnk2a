{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "articles",
  "info": {
    "name": "article"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "published_at": {
      "type": "date",
      "required": true
    },
    "category": {
      "model": "category",
      "via": "articles"
    },
    "show": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "views": {
      "type": "integer",
      "default": 0
    },
    "autor": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "articles"
    }
  }
}
